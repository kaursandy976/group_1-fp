<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/captaimage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:layout_margin="2dp"
        android:src="@drawable/light1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.animsh.animatedcheckbox.AnimatedCheckBox
        android:id="@+id/roboatcheckbox"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        app:border_stroke_width="2dp"
        app:color_checked="@color/purple_200"
        app:color_tick="@color/white"
        app:color_unchecked="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/captaimage"
        app:layout_constraintEnd_toEndOf="@+id/captaimage"
        app:layout_constraintHorizontal_bias="0.97"
        app:layout_constraintStart_toStartOf="@+id/captaimage"
        app:layout_constraintTop_toTopOf="@+id/captaimage"
        app:layout_constraintVertical_bias="0.0"
        app:small_tick="true" />

</androidx.constraintlayout.widget.ConstraintLayout>